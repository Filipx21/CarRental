<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")

</head>
<body>

    <header>
        <div>
            <div class="header-inform-logo">
                <a class="logo" href="/">
                    <img src="@Url.Content("~/Content/Images/logo.png")" class="center" />
                </a>
            </div>
        </div>
        <ul class="header-menu">
            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <li class="header-menu-element"><a href="@Url.Action("AddCar", "Manage")">Dodaj auto</a></li>
            }
            else
            {
                <li class="header-element-disable"><a href="#"></a></li>
            }
            <li class="header-menu-element"><a href="@Url.Action("ChangeUserData", "Manage")">Użytkownik</a></li>
            <li class="header-menu-element"><a href="@Url.Action("ChangePassword", "Manage")">Zmień hasło</a></li>
            <li class="header-menu-element"><a href="@Url.Action("Index", "Home")">Powrót</a></li>
            <li class="header-menu-element-account">
                @Html.Partial("_LoginPartial")
            </li>
        </ul>
    </header>



    <div class="wrapper">
        @RenderBody()
    </div>


    <footer>
        <ul>
            <li><a href="@Url.Action("StronyStatyczne", "Home", new { nazwa = "Onas" })">O nas</a></li>
            <li><a href="@Url.Action("StronyStatyczne", "Home", new { nazwa = "Opinie" })">Opinie</a></li>
            <li><a href="@Url.Action("StronyStatyczne", "Home", new { nazwa = "Pomoc" })">Pomoc</a></li>
            <li><a href="@Url.Action("StronyStatyczne", "Home", new { nazwa = "Regulamin" })">Regulamin</a></li>
            <li><a href="@Url.Action("StronyStatyczne", "Home", new { nazwa = "Kontakt" })">Kontakt</a></li>
        </ul>

        <div id="footerCopyright">
            Copyright &copy; 2021 Filip Zając;
        </div>
    </footer>

    @RenderSection("Scripts", required: false)

</body>
</html>

