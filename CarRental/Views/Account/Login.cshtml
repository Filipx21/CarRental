@model CarRental.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="login-form">
    <div class="login-form-info">Logowanie</div>
    @using (@Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div id="login-error">
            @Html.ValidationMessage("loginerror", "")
        </div>
        <table id="login-table" style="margin-left: auto; margin-right: auto;">
            <tr class="login-form-element">
                <td class="login-form-label">@Html.LabelFor(o => o.Email, "E-mail:")</td>
                <td>
                    @Html.TextBoxFor(o => o.Email, new { @class = "login-form-input" })
                    <div class="login-validation-message">
                        @Html.ValidationMessageFor(o => o.Email)
                    </div>
                </td>
            </tr>
            <tr class="login-form-element">
                <td class="login-form-label">@Html.LabelFor(o => o.Password, "Hasło:")</td>
                <td>
                    @Html.PasswordFor(o => o.Password, new { @class = "login-form-input" })
                    <div class="login-validation-message">
                        @Html.ValidationMessageFor(o => o.Password)
                    </div>
                </td>
                <td></td>
            </tr>
            <tr>
                <td colspan="3">
                    <div class="checkbox" style="margin-bottom: 10px;">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @checked = "checked" })
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                    <input type="submit" value="Zaloguj" class="login-form-submit" />
                </td>
            </tr>
        </table>
        <div style="text-align: center;">
            <a class="login-form-register" href="@Url.Action("Register")">Nie mam jeszcze konta</a>
        </div>
    }
</div>

@section Scripts
{
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryAndValidate")
}

