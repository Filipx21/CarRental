@model CarRental.ViewModels.ChangePasswordViewModel

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_ManageLayout.cshtml";
}

<div class="login-form">
    <div class="login-form-info">Zmiana hasła</div>
    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="login-error">
            @Html.ValidationMessage("password-error", "")
        </div>

        <table id="password-table" style="margin-left: auto; margin-right: auto;">
            <tr class="login-form-element">
                <td>@Html.LabelFor(o => o.OldPassword, "Stare hasło:")</td>
                <td>
                    @Html.PasswordFor(o => o.OldPassword, new { @class = "login-form-input" })
                    <div class="login-validation-message">
                        @Html.ValidationMessageFor(o => o.OldPassword)
                    </div>
                </td>
            </tr>
            <tr class="login-form-element">
                <td>@Html.LabelFor(o => o.NewPassword, "Nowe hasło:")</td>
                <td>
                    @Html.PasswordFor(o => o.NewPassword, new { @class = "login-form-input" })
                    <div class="login-validation-message">
                        @Html.ValidationMessageFor(o => o.NewPassword)
                    </div>
                </td>
            </tr>
            <tr class="login-form-element">
                <td>@Html.LabelFor(o => o.ConfirmPassword, "Potwierdź hasło:")</td>
                <td>
                    @Html.PasswordFor(o => o.ConfirmPassword, new { @class = "login-form-input" })
                    <div class="login-validation-message">
                        @Html.ValidationMessageFor(o => o.ConfirmPassword)
                    </div>
                </td>
            </tr>
            <tr class="login-form-element">
                <td></td>
                <td colspan="3">
                    <div class="checkbox" style="margin-bottom: 10px;">
                    </div>
                    <input type="submit" value="Zmień" class="login-form-submit" style="height: 40px;" />
                </td>
            </tr>
        </table>
    }
</div>
@section Scripts
{
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryAndValidate")
}
